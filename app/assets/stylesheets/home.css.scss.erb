/* ----------------------
   Text Box Formats
   -------------------------*/
.text-box {
    margin: 0 auto;
    position: relative;
}

.full-margins {
    width: 960px;
    text-align: justify;
}

.full-no-margins {
    width: 90%;
    text-align: justify;
}

.single-column-text {
    width: 350px;
    text-align: justify;
}

.two-column-text {
    width: 750px;
    text-align: justify;
    -moz-column-count: 2; // Firefox
    -webkit-column-count: 2; // Safari and Chrome
    column-count: 2;
    -moz-column-gap: 35px; // Firefox
    -webkit-column-gap: 35px; // Safari and Chrome
    column-gap: 35px;

    img {
        display: block;
        margin: 10px auto;
        max-width: 350px;
        box-shadow: 2px 2px 0.1em #A1A1A1;
    }

    &.background img {
        box-shadow: 2px 2px 0.1em #000000;
    }
}

.single-line-text {
    display: inline;
    text-align: left;
}

.quote-big {
    font-family: 'Francois One', sans-serif;
    font-style: italic;
    letter-spacing: -3px;
    word-spacing: -3px;
    text-align: center;
    text-shadow: none;
    font-size: 200px;
    line-height: 200px;
}


blockquote {
    margin-top: 25px;
    padding: 0 120px;
    position: relative;
    font-style: italic;
    min-height: 70px;
}

blockquote:before {
    display: block;
    content: "\201C";
    font-size: 120px;
    position: absolute;
    left: 22px;
    top: -12px;
    color: #A1A1A1;
}


/* ----------------------
   Sprite Formats
   -------------------------*/
.sprite {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.image {
    background-repeat: no-repeat !important;
}

.tiling {
    background-repeat: repeat !important;
}

.cover {
    background-repeat: no-repeat !important;
    background-size: cover !important;
}

/* ----------------------
   Animation Formats
   -------------------------*/
.fixed {
    background-attachment: fixed !important;
}

/* ----------------------
   Album Formats
   -------------------------*/
.album {
    margin: 30px auto 10px;
    width: 80%;
    text-align: center;
    overflow: auto;
    position: relative;

    img {
        margin: 5px;
        width: auto;
        height: auto;
        max-height: 200px;
    }
}

.horizontal-scroll {
    white-space: nowrap;
    width: 100%;
    overflow-x: hidden;
    position: relative;

    a {
        display: inline-block;
        float: left;
    }

    img {
        display: inline-block;
        max-height: 500px;
        margin: 0;
    }
}

.coffee-table {
    height: 350px;
    position: relative;
    overflow: visible;
    margin-top: 45px;

    img {
        border-radius: 5px;
        border: solid 3px rgba(255, 255, 255, .5);
        -webkit-background-clip: padding-box; /* for Safari */
        background-clip: padding-box; /* for IE9+, Firefox 4+, Opera, Chrome */
        max-height: 300px;
        max-width: 300px;
        width: auto;
        position: absolute;
    }
}

.comic {
    width: 100%;
    overflow: auto;
    height: <%= Album.album_comic_page_size[:height] + 4 %>px;
    left: 7px;

   a {
        position: absolute;
        border: 2px solid #000000;
        overflow: hidden;

        img {
            width: 100%;
            height: 100%;
            max-height: none;
            margin: 0;
        }
    }
}


/* ----------------------
   Effects
   -------------------------*/
.fader {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000000;
    z-index: 500;
}


/* ----------------------
   Modal
   -------------------------*/
#modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.5;
    filter: alpha(opacity=50);
    z-index: 1001;
}

#modal {
    position: absolute;
    background: rgba(0,0,0,0.2);
    padding: 8px;
    top: 0;
    left: 0;
    z-index: 1002;

    img {
        max-height: 90%;
    }

}


/* ----------------------
   Loader from http://cssload.net/
   -------------------------*/
#loading{
    position:fixed;
    bottom: 20px;
    right: 20px;
    width:50px;
    height:50px;
}

#bowl_ringG{
    position:absolute;
    width:50px;
    height:50px;
    border:4px solid #7d7d7d;
    -moz-border-radius:50px;
    -webkit-border-radius:50px;
    border-radius:50px;
}

.ball_holderG{
    position:absolute;
    width:13px;
    height:50px;
    left:18px;
    top:0px;
    -webkit-animation-name:ball_moveG;
    -webkit-animation-duration:1.2s;
    -webkit-animation-iteration-count:infinite;
    -webkit-animation-timing-function:linear;
    -moz-animation-name:ball_moveG;
    -moz-animation-duration:1.2s;
    -moz-animation-iteration-count:infinite;
    -moz-animation-timing-function:linear;
    -o-animation-name:ball_moveG;
    -o-animation-duration:1.2s;
    -o-animation-iteration-count:infinite;
    -o-animation-timing-function:linear;
    -ms-animation-name:ball_moveG;
    -ms-animation-duration:1.2s;
    -ms-animation-iteration-count:infinite;
    -ms-animation-timing-function:linear;
}

.ballG{
    position:absolute;
    left:0px;
    top:-12px;
    width:20px;
    height:20px;
    background:#333333;
    -moz-border-radius:17px;
    -webkit-border-radius:17px;
    border-radius:17px;
}

@-webkit-keyframes ball_moveG{
    0%{
        -webkit-transform:rotate(0deg)}

    100%{
        -webkit-transform:rotate(360deg)}

}

@-moz-keyframes ball_moveG{
    0%{
        -moz-transform:rotate(0deg)}

    100%{
        -moz-transform:rotate(360deg)}

}

@-o-keyframes ball_moveG{
    0%{
        -o-transform:rotate(0deg)}

    100%{
        -o-transform:rotate(360deg)}

}

@-ms-keyframes ball_moveG{
    0%{
        -ms-transform:rotate(0deg)}

    100%{
        -ms-transform:rotate(360deg)}

}


/* ----------------------
   Syntax Highlighting with CodeRay
   -------------------------*/

.CodeRay {
    display: block;
    border-radius: 5px;
    box-shadow: 2px 2px 0 #A1A1A1;
    background-color: #232323;
    font-family: 'Courier New', 'Terminal', monospace;
    color: #E6E0DB;
    padding: 3px 5px;
    overflow: auto;
    font-size: 12px;
    margin: 12px 0;
    text-shadow: none;
}

.CodeRay pre {
    margin: 0px;
    padding: 0px;
}

table.CodeRay { border-collapse: collapse; width: 100%; padding: 2px }

table.CodeRay td {
    padding: 1em 0.5em;
    vertical-align: top;
}

.CodeRay .line-numbers, .CodeRay .no {
  background-color: #5A5353;
  color: #AAA;
  text-align: right;
  border-radius: 5px;
}

.CodeRay .line-numbers a {
  color: #000000;
}

.CodeRay .line-numbers tt { font-weight: bold }
.CodeRay .line-numbers .highlighted { color: red }

.CodeRay .an { color:#E7BE69 }                      /* html attribute */
.CodeRay .c  { color:#BC9358; font-style: italic; } /* comment */
.CodeRay .ch { color:#509E4F }                      /* escaped character */
.CodeRay .cl { color:#FFF }                         /* class */
.CodeRay .co { color:#FFF }                         /* constant */
.CodeRay .gv { color:#D0CFFE }                      /* global variable */
.CodeRay .i  { color:#A4C260 }                      /* integer */
.CodeRay .il { background:#151515 }                 /* inline code */
.CodeRay .iv { color:#D0CFFE }                      /* instance variable */
.CodeRay .pp { color:#E7BE69 }                      /* doctype */
.CodeRay .rx { color:#A4C260 }                      /* regex */
.CodeRay .s  { color:#A4C260 }                      /* string */
.CodeRay .sy { color:#6C9CBD }                      /* symbol */
.CodeRay .ta { color:#E7BE69 }                      /* html tag */
.CodeRay .pc { color:#6C9CBD }                      /* boolean */

.CodeRay .tag { color:#070 }
.CodeRay .keyword  { color:#CB7832 }
.CodeRay .function { color:#FFC56D }
.CodeRay .tag-special { color:#D70; font-weight:bold }
.CodeRay .type { color:#339; font-weight:bold }
.CodeRay .regexp .function  { color:#404; font-weight: bold }
.CodeRay .regexp .content { color:#808 }
.CodeRay .regexp .delimiter { color:#404 }
.CodeRay .float { color:#A4C260 }
