@mixin rounded-top($radius: 5px) {
    border-top-left-radius: $radius;
    border-top-right-radius: $radius;
}

@mixin rounded-bottom($radius: 5px) {
    border-bottom-left-radius: $radius;
    border-bottom-right-radius: $radius;
}

$background-bg: #333333;
$background-bg-dark: #000000;

$midground-bg: #ECE5E5;
$midground-bg-dark: #ADA9A9;

$foreground-bg: #FFFFFF;
$foreground-bg-dark: #FDFDFD;

$background-txt: #FDFDFD;
$background-txt-light: #FFFFFF;
$background-txt-shadow: 1px 1px 0.1em #000000;
$background-txt-link: #A1A1A1;

$midground-txt: #000000;
$midground-txt-light: #868585;
$midground-txt-shadow: 1px 1px 0.1em #FFFFFF;
$midground-txt-link: #566DE6;

$foreground-txt: #000000;
$foreground-txt-light: #A1A1A1;
$foreground-txt-shadow: 1px 1px 0.1em #FFFFFF;
$foreground-txt-link: #566DE6;

/* ----------------------
Defaults
-------------------------*/

body {
    font-family: 'Arbutus Slab', serif;
    background-position: top center;
    background-repeat: repeat;
    margin: 0;
    width: 100%;
}

a, a:visited {
    text-decoration: none;
    color: #000000;
}

p {
    margin: 0 0 15px;
}

ul {
    margin-top: 0;
    margin-bottom: 15px;
}

h1 {
    font-size: 160px;
    margin: 0 auto;
}

h2 {
    font-size: 100px;
    margin-top: 10px;
}

h3 {
    margin: 10px 0;
}

h4, h5, h6 {
    margin: 5px 0;
}

img {
    max-width: 100%;
}

/* ----------------------
   Nav
   -------------------------*/
nav {
    position: fixed;
    right: 20px;
    top: 10px;
    z-index: 1000;

    ul {
        font-family: 'Open Sans Condensed', Arial, Arial, Helvetica, sans-serif;

        li {
            list-style-type: none;

            a {
                display: block;
                float: right;

                &.title {
                    margin-right: 10px;
                    font-size: 16px;
                    text-shadow: 0.1em 0 0 $midground-txt-light;
                }

                &.bullet {
                    clear: both;
                    width: 37px;
                    height: 20px;
                    font-size: 15px;
                    text-align: center;
                    vertical-align: middle;
                    background-color: rgba(173, 169, 169, 0.75);
                    color: #666666;
                    box-shadow: 1px 1px 1px #000000;
                }
            }

            &:first-child a.bullet {
                @include rounded-top(5px);
            }

            &:last-child a.bullet {
                @include rounded-bottom(5px);
                border-bottom: none;
            }

            a.bullet:hover {
                color: #ADA9A9;
            }

            &.current, &.hover {
                a.bullet {
                    background-color: rgba(0, 0, 0, 0.5);
                    color: #ADA9A9;
                }
            }
        }
    }
}

/* ----------------------
   Global Post Format
   -------------------------*/
article {
    margin: 0 auto;
    width: 100%;
    position: relative;
    overflow: hidden;

    header {
        text-align: center;
        margin: 0 auto 0;
        width: 750px;
        position: relative;
        z-index: 100;

        h1 {
            padding: 0 10px 0 0;
            margin-bottom: -3px;
            font-size: 19px;
        }

        time {
            display: block;
            color: $foreground-txt-light;
            width: 750px;
            margin: 0 auto;
            padding: 0 0 10px 0;
            text-align: right;
            border-top: solid 1px $foreground-txt-light;
        }
    }
}

