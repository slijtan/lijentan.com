<header id="main">
  <hgroup>
    <h1>lijentan.com</h1>
    <h2>A place on the web for all my stuff...</h2>
  </hgroup>
</header>

<nav>
  <ul>
    <li><a href="#">RSS</a></li>
    <li><a href="#">Filter By Tag</a></li>
    <li><a href="#">FB</a></li>
    <li><input type="search" placeholder="search" /></li>
  </ul>
</nav>

<section>
  <% @posts.each do |post| %>
  <article<% unless post.background_url.blank?  %> style="background-image: url(<%= asset_path(post.background_url) %>)"<% end %>>
    <header>
      <h1><%= post.title %></h1>
    </header>
    <time datetime="<%= post.date_published.to_s(:db) %>" pubdate><%= post.date_published.to_formatted_s(:post_title)  %></time>
    <div><%= post.body %></div>
    <% unless post.images.blank? %>
    <ul>
      <% post.images.each do |image| %>
      <li><a href="#"><%= image_tag(image.url) %></a></li>
      <% end %>
    </ul>
    <% end %>
  </article>
  <% end %>
</section>
