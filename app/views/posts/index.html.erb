<header id="main">
  <hgroup>
    <h1>Lijen's Blog</h1>
    <h2>A place on the web for all my stuff...</h2>
  </hgroup>
</header>

<nav>
  <ul id="posts-nav">
    <% for post in @posts %>
    <%= render partial: 'post_nav', locals: { post: post } %>
    <% end %>
    <li id="nav-post-loading" style="display:none">
      <a class="bullet">&#8226;</a>
    </li>
  </ul>
</nav>

<section id="posts">
  <%= render(@posts) %>
</section>
